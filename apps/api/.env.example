# 應用程式設定
PORT=3001
CORS_ORIGIN=http://localhost:5173

# 資料庫 URL
# Prisma 將使用此 URL 來連接資料庫
# 對於 SQLite: "file:./prisma/dev.db"
# 對於 PostgreSQL: "postgresql://USER:PASSWORD@HOST:PORT/DATABASE"
# 對於 MySQL: "mysql://USER:PASSWORD@HOST:PORT/DATABASE"
DATABASE_URL="file:./prisma/dev.db"

# JWT 設定
# 建議使用強隨機字串
JWT_SECRET=your-super-secret-key
JWT_EXPIRES_IN=7d

# 日誌級別
# 可選值: 'fatal', 'error', 'warn', 'info', 'debug', 'trace'
LOG_LEVEL=info
