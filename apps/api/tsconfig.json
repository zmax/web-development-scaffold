{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["../../packages/types/src/*"],
      "@lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
