{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // --- 輸出設定 ---
    "outDir": "./dist",
    "rootDir": "./src",
    // 標記為複合專案，以便被 `tsc --build` 正確處理
    "composite": true,
    // --- 模組設定 (Node.js) ---
    // 對於現代 Node.js 後端，使用 NodeNext 更為精確
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../../packages/types"
    }
  ]
}
