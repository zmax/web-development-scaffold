{
  "name": "axiom",
  "version": "1.0.0",
  "description": "A modern web development scaffold, built on proven principles (axioms) for quality and efficiency.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm build && concurrently --names \"PACKAGES,WEB,API\" --handle-input \"pnpm:dev:packages\" \"pnpm:dev:web\" \"pnpm:dev:api\"",
    "dev:packages": "pnpm --filter \"./packages/**\" --parallel build --watch",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --build --verbose",
    "clean": "pnpm -r clean",
    "prepare": "husky install",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@eslint-react/eslint-plugin": "latest",
    "commitizen": "^4.3.1",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.15.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
