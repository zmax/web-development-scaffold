{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "composite": true
  },
  "paths": {
    "@/*": ["./src/*"],
    "@ui/*": ["../../packages/ui/src/*"],
    "@utils/*": ["../../packages/utils/src/*"],
    "@types/*": ["../../packages/types/src/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
