{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // --- 輸出設定 ---
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true, // 產生 .d.ts 型別定義檔
    "declarationMap": true,
    "sourceMap": true,
    "composite": true, // 標記為複合專案
    // --- 模組與環境設定 (React) ---
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.{ts,tsx}", "test"],
  "references": [
    // 定義對共享套件的建構依賴
    {
      "path": "../utils"
    }
  ]
}
